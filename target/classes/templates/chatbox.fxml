<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="hauptPane" focusTraversable="true" prefHeight="700.0" prefWidth="670.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="BoteFx.controller.ChatBoxController">
   <children>
      <AnchorPane fx:id="leftPane" prefWidth="300.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <BorderPane fx:id="chatFreundeBorderPane" prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

               <top>
                  <Label fx:id="headerLabel" alignment="CENTER" prefHeight="45.0" prefWidth="300.0" style="-fx-background-color: #FAFAFF; -fx-border-color: #E6E6FF; -fx-border-style: none none solid none;" text="HEADER" textFill="#009933" BorderPane.alignment="CENTER">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
               </top>

               <center>
                  <ScrollPane fx:id="chatFreundeScroll" hbarPolicy="NEVER" pannable="true" vbarPolicy="NEVER" BorderPane.alignment="CENTER">
                     <content>
                        <VBox fx:id="chatFreundeVBox" prefHeight="600.0" prefWidth="296.0" />
                     </content>
                  </ScrollPane>
               </center>

               <bottom>
                  <Label fx:id="footerLabel" alignment="CENTER" prefHeight="45.0" prefWidth="300.0" style="-fx-background-color: #FAFAFF; -fx-border-color: #E6E6FF; -fx-border-style: solid none none none;" text="Footer" textFill="#0000cc" BorderPane.alignment="CENTER">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
               </bottom>

            </BorderPane>
         </children>
      </AnchorPane>
      <!-- Ende LeftPane(linke Seite-freunde) -->

      <!-- rightPane(Rechte Seite-Chat, message ausgabe) -->
      <AnchorPane fx:id="rightPane" style="-fx-border-color: #E6E6FF; -fx-border-style: solid; -fx-border-width: 0 0 0 1;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="300.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
   </children>
</AnchorPane>
